SELECT name, runs, matches
FROM players
WHERE role = 'Batsman';
SELECT name, runs
FROM players
ORDER BY runs DESC
LIMIT 3;
SELECT name, runs, wickets
FROM players
WHERE role = 'All-Rounder' AND runs > 1000 AND wickets > 100;
SELECT AVG(runs) AS avg_batsman_runs
FROM players
WHERE role = 'Batsman';
SELECT name, wickets
FROM players
WHERE wickets > 50
ORDER BY wickets DESC;
]
